---
interface Props {
	date: Date
	title: string
	description: string
	slug: string
}
const {date, title, description, slug} = Astro.props
---

<div class="flex flex-col w-full items-center text-center p-8 space-y-1 max-w-5xl mx-auto">
	<h1 class="text-5xl max-md:text-3xl font-black text-slate-900 dark:text-slate-100">{title}</h1>
	<p class="max-md:text-sm text-slate-800 dark:text-slate-300">{description}</p>
	<p class="max-md:text-sm self-end text-slate-400 dark:text-slate-600">Published <span class="text-slate-600 dark:text-slate-400">{date.toLocaleDateString()}</span></p>
</div>